# 	playerctl {previous,next,play-pause}

# h,j,k,l keys
alt + super + {h,j,k,l}
  playerctl position {0.5-,10-,10+,0.5+}

XF86Audio{Prev,Next,Play,Stop}
	playerctl {previous,next,play-pause,pause}

ctrl + alt + d
	alacritty -e bash -c "/home/$USER/.local/bin/arandr_select.sh; read -n1 -sp 'Press any key to close the terminal...' && exit"

shift + F5
	alacritty --class 'alacritty-float,alacritty-float' -e bash -c "/home/$USER/.local/bin/arandr_select.sh; read -n1 -sp 'Press any key to close the terminal...' && exit"

ctrl + alt + r
	/home/$USER/.local/bin/ranger_float.sh

ctrl + alt + l
	alacritty --class 'alacritty-float,alacritty-float' -e bash -c "/home/$USER/.local/bin/keyboard_layout_menu.sh; read -n1 -sp 'Press any key to close the terminal...' && exit"


