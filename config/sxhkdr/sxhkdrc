XF86MonBrightnessDown
	/home/$USER/.local/bin/brightness --dec
	
XF86MonBrightnessUp
	/home/$USER/.local/bin/brightness --inc

XF86AudioRaiseVolume
	/home/$USER/.local/bin/volume --inc

XF86AudioLowerVolume
	/home/$USER/.local/bin/volume --dec

