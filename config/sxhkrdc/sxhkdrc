XF86MonBrightnessDown
	/home/$USER/.local/bin/brightness --dec
	
XF86MonBrightnessUp
	/home/$USER/.local/bin/brightness --inc

XF86AudioRaiseVolume
	/home/$USER/.local/bin/volume --inc
	
XF86AudioLowerVolume
	/home/$USER/.local/bin/volume --dec

ctrl + alt + {h,k,p}
	playerctl {previous,next,play-pause}

XF86Audio{Prev,Next,Play,Stop}
	playerctl {previous,next,play-pause,pause}
